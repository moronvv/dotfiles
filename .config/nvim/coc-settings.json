{
  "python.linting.enabled": true,
  "pyright.organizeimports.provider": "isort",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=115", "--ignore=F401"],
  "python.linting.pylintEnabled": false,
  "python.linting.pylintArgs": [
    "--disable=C0103,C0114,C0115,C0116,W0703,W0612,W0621,W0611,W1203,I1101,R0903"
  ],
  "python.linting.prospectorEnabled": false,
  "python.linting.mypyEnabled": false,
  "python.formatting.provider": "black",
  "python.formatting.yapfArgs": ["--style={ column_limit: 115 }"],
  "python.venvPath": "/Users/veselov_v/Library/Caches/pypoetry/virtualenvs",
  "diagnostic.checkCurrentLine": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToBufferVar": true,
  "html.filetypes": ["html", "jinja.html"],
  "yaml.format.enable": true,
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": [
    "**/.git/**",
    "**/.mypy_cache/**",
    "**/node_modules/**"
  ],
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"],
      "initializationOptions": {
        "haskell": {
          "hlintOn": true,
          "formattingProvider": "stylish-haskell"
        }
      }
    }
  },
  "git.enableGutters": true
}
